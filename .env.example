# Environment variables for LMS AI Platform

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/lms-ai-platform
DB_NAME=lms-ai-platform
# DB_USER=your_mongodb_user
# DB_PASS=your_mongodb_password

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=LMS AI Platform <noreply@lms-ai.com>

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_RECOMMENDATION_ENDPOINT=http://localhost:5000/api/recommendations

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,zip,jpg,png,mp4,mp3
UPLOAD_PATH=./uploads
CDN_URL=https://your-cdn.com

# Payment Configuration
# Traditional Payment Providers
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-infura-key
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your-infura-key
BSC_RPC_URL=https://bsc-dataseed.binance.org/
PAYMENT_WALLET_ADDRESS=0x1234567890123456789012345678901234567890
PAYMENT_PRIVATE_KEY=your-wallet-private-key-keep-secret

# Push Notification Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# External API Keys
YOUTUBE_API_KEY=your-youtube-api-key
VIMEO_ACCESS_TOKEN=your-vimeo-access-token

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Features Flags
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_BLOCKCHAIN_PAYMENTS=false
ENABLE_PROCTORING=false
ENABLE_SOCIAL_FEATURES=true
ENABLE_GAMIFICATION=true

# Development Settings
ENABLE_SEED_DATA=true
ENABLE_DEBUG_LOGS=true
